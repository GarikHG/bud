{
  "include": ["./src/*", "./src/**/*"],
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "sourceMap": true,
    "module": "CommonJS",
    "outDir": "build",
    "jsx": "preserve"
  }
}
