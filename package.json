{
  "name": "bud",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "make": "run-s --silent clean install build",
    "clean": "lerna clean -y --loglevel silent",
    "install": "lerna bootstrap --loglevel silent",
    "build": "run-s --silent build:support build:framework build:server build:compiler build:bud build:plugins",
    "build:support": "lerna run --loglevel silent --parallel --stream --profile --scope=@roots/{bud-support,bud-typings} build",
    "build:framework": "lerna run --loglevel silent --parallel --stream --profile --scope=@roots/{bud-framework,bud-cli} build",
    "build:server": "lerna run --loglevel silent --parallel --stream --profile --scope=@roots/bud-server build",
    "build:compiler": "lerna run --loglevel silent --parallel --stream --profile --scope=@roots/bud-compiler build",
    "build:bud": "lerna run --loglevel silent --parallel --stream --profile --scope=@roots/bud build",
    "build:plugins": "lerna run --loglevel silent --parallel --stream --profile --scope='@roots/bud-*' --ignore='@roots/{bud-support,bud-framework,bud-typings,bud-compiler,bud-server}' build",
    "lint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "test": "ava",
    "test:coverage": "nyc yarn run test",
    "test:coverage:lcov": "nyc --reporter=lcov yarn run test",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -u",
    "release:next": "lerna publish --ignore-scripts --dist-tag next",
    "release:next:pre": "lerna publish prerelease --ignore-scripts --pre-dist-tag next",
    "release:latest": "lerna publish --ignore-scripts",
    "release:latest:pre": "lerna publish --ignore-scripts --pre-dist-tag rc"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@ava/typescript": "^1.1.1",
    "@babel/core": "^7.11.5",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@types/autoprefixer": "^9.7.2",
    "@types/babel-core": "^6.25.6",
    "@types/babel-plugin-macros": "^2.8.2",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.157",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^14.0.23",
    "@types/node-notifier": "^6.0.1",
    "@types/node-sass": "^4.11.1",
    "@types/prettier": "^2.0.2",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/terser-webpack-plugin": "^3.0.0",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@types/webpack-hot-middleware": "^2.25.3",
    "@types/wordpress__dependency-extraction-webpack-plugin": "^2.7.0",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.9.1",
    "ava": "^3.11.1",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.1.5",
    "conventional-changelog-cli": "^2.1.0",
    "cross-env": "^7.0.2",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "execa": "^4.0.3",
    "husky": "^4.2.5",
    "ink-testing-library": "^2.0.1",
    "lerna": "^3.22.1",
    "listr": "^0.14.3",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^15.8.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1"
  },
  "nohoist": [
  ],
  "workspaces": {
    "packages": [
      "packages/bud-cli",
      "packages/bud-support",
      "packages/bud-typings",
      "packages/bud-framework",
      "packages/bud-compiler",
      "packages/bud-server",
      "packages/bud",
      "packages/bud-webpack-tools",
      "packages/bud-dependency-extraction-webpack-plugin",
      "packages/bud-eslint",
      "packages/bud-purgecss",
      "packages/bud-react",
      "packages/bud-sass",
      "packages/bud-stylelint",
      "packages/bud-tailwindcss",
      "packages/bud-typescript",
      "packages/bud-vue"
    ]
  }
}
