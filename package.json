{
  "name": "@roots/bud-framework",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/bud.git"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "engines": {
    "node": ">=12"
  },
  "workspaces": {
    "packages": [
      "packages/bud-support",
      "packages/bud-typings",
      "packages/bud",
      "packages/bud-dependency-extraction-webpack-plugin",
      "packages/bud-eslint",
      "packages/bud-palette-webpack-plugin",
      "packages/bud-purgecss",
      "packages/bud-react",
      "packages/bud-sage",
      "packages/bud-sass",
      "packages/bud-stylelint",
      "packages/bud-tailwindcss",
      "packages/bud-typescript",
      "packages/bud-vue"
    ],
    "nohoist": [
      "**/webpack-hot-client",
      "**/webpack-hot-client/**",
      "**/webpack-hot-middleware",
      "**/webpack-hot-middleware/**",
      "**/@wordpress/browserslist-config",
      "**/@wordpress/browserslist-config/**"
    ]
  },
  "scripts": {
    "test": "ava",
    "test:coverage": "nyc yarn run test",
    "build": "run-s lint build:packages test",
    "build:packages": "yarn workspaces run build",
    "commit": "yarn git-cz",
    "lint": "eslint 'packages/**/*.{js,ts,tsx}' --fix"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@ava/typescript": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "ava": "^3.11.1",
    "commitizen": "^4.1.5",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "execa": "^4.0.3",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5"
  }
}
