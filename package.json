{
  "name": "@roots/bud-framework",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/bud.git"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "engines": {
    "node": ">=12"
  },
  "workspaces": {
    "packages": [
      "packages/bud",
      "packages/bud-dependency-extraction",
      "packages/bud-eslint",
      "packages/bud-gutenberg-palette",
      "packages/bud-purgecss",
      "packages/bud-sage",
      "packages/bud-sass",
      "packages/bud-stylelint",
      "packages/bud-tailwind",
      "packages/bud-typescript",
      "packages/bud-typings",
      "packages/bud-vue"
    ],
    "nohoist": [
      "**/webpack-hot-client",
      "**/webpack-hot-client/**",
      "**/webpack-hot-middleware",
      "**/webpack-hot-middleware/**"
    ]
  },
  "scripts": {
    "test": "ava",
    "test:coverage": "nyc yarn run test",
    "build": "yarn workspaces run build",
    "docs": "node ./scripts/docs",
    "pkg-link": "node ./scripts/linkWorkspaces",
    "pkg-unlink": "node ./scripts/unlinkWorkspaces",
    "lint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "postinstall": "node ./scripts/postinstall",
    "release": "node ./scripts/release"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "ava": "^3.11.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "execa": "^4.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.4.0"
  }
}
